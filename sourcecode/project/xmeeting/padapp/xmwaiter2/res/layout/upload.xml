<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/v5_0_1_topbar"
            android:paddingRight="10dp" >

            


            <ImageView
	            android:id="@+id/imageView2"
	            android:layout_width="wrap_content"
	            android:layout_height="25dp"
	            android:layout_centerVertical="true"
	            android:layout_toLeftOf="@+id/iV"
	            android:background="@drawable/v5_0_1_flipper_head_separator" />
            <ImageView
	            android:id="@+id/iV"
	            android:layout_width="10dp"
	            android:layout_height="25dp"
	            android:layout_centerVertical="true"
	            android:layout_toLeftOf="@+id/btnFun" />

	        <Button
	            android:id="@+id/btnFun"
	            android:layout_width="wrap_content"
	            android:layout_height="28dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:background="@drawable/a"
	            android:text="编辑"
	            android:textColor="#ffffff" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/lyBack"
                android:background="@drawable/v5_0_1_flipper_head_separator" />

            <ImageView
            android:id="@+id/iV"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnFun" />
            
            
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btnBack" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView3"
                android:paddingLeft="10dp"
                android:text="上传队列"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />

            <RelativeLayout
                android:id="@+id/lyBack"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_back_arr" />

            </RelativeLayout>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:layout_weight="5"
        android:orientation="vertical" >
        
        <ListView
            android:id="@+id/lvUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/comm_select_list_line" >
	
	    </ListView>
	    
        <ListView
            android:id="@+id/lvUploadFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/comm_select_list_line" 
            android:visibility="gone">
	
	    </ListView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnLoading"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/v5_0_1_tabsbar_selected_bg"
            android:text="正在上传"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnLoaded"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/v5_0_1_tabsbar_bg"
            android:text="上传完成"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
