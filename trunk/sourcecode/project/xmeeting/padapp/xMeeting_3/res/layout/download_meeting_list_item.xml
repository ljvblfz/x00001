<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvMeetingId"
        android:layout_width="100dip"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:text="ID"
        android:textSize="20dip" />
    <TextView
        android:id="@+id/tvMeetingTitle"
        android:layout_width="250dip"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:text="会议名称"
        android:textSize="20dip" />

    

    <TextView
        android:id="@+id/tvDownloadTime"
        android:layout_width="200dip"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:text="2013-08-09 12:30"
        android:textSize="20dip" />
    <TextView
        android:id="@+id/tvMeetingStatus"
        android:layout_width="50dip"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:text="状态"
        android:textSize="20dip" />
    
    <TextView
        android:id="@+id/tvSpace1"
        android:layout_width="20dip"
        android:layout_height="fill_parent"
        android:text="" 
        android:visibility="invisible" />
 

    <Button
        android:id="@+id/btnDownloadJsonInfo"
        android:layout_width="150dip"
        android:layout_height="50dip"
        android:gravity="center"
        android:text="同步文字信息"
        android:textSize="20dip" />
    
    <TextView
        android:id="@+id/tvSpace3"
        android:layout_width="20dip"
        android:layout_height="fill_parent"
        android:text="" 
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnDownloadAllInfo"
        android:layout_width="180dip"
        android:layout_height="50dip"
        android:gravity="center"
        android:text="同步文字和文件"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/tvSpace2"
        android:layout_width="20dip"
        android:layout_height="fill_parent"
        android:text="" 
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnActivate"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:gravity="center"
        android:text="激活"
        android:textSize="20dip" />
    <TextView
        android:id="@+id/tvSpace3"
        android:layout_width="20dip"
        android:layout_height="fill_parent"
        android:text="" 
        android:visibility="invisible" />
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:gravity="center"
        android:text="删除"
        android:textSize="20dip" />


</LinearLayout>