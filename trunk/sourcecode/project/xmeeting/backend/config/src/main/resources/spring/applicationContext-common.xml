<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-autowire="byName" default-lazy-init="true">

	<context:component-scan base-package="com.founder.sipbus.*.*.dao" 			name-generator="com.founder.sipbus.SpringBeanNameGenerator" /> 
	<context:component-scan base-package="com.founder.sipbus.*.*.resource"  	name-generator="com.founder.sipbus.SpringBeanNameGenerator" /> 
	<context:component-scan base-package="com.founder.sipbus.*.*.service"  		name-generator="com.founder.sipbus.SpringBeanNameGenerator" /> 
	
	<!--  -->
	<context:component-scan base-package="com.broadsoft.xmeeting.*.*.dao" 		name-generator="com.founder.sipbus.SpringBeanNameGenerator" />  
	<context:component-scan base-package="com.broadsoft.xmeeting.*.*.resource"  name-generator="com.founder.sipbus.SpringBeanNameGenerator" /> 
	<context:component-scan base-package="com.broadsoft.xmeeting.*.*.service"  	name-generator="com.founder.sipbus.SpringBeanNameGenerator" />
		
 
	
	
</beans>
