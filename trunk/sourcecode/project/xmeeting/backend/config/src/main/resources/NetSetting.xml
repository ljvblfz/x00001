<?xml version="1.0" encoding="GBK"?>
<configs>

	<!-- Memcached服务器的配置 -->
	<mapKey name="memcached.server.config">
		<!-- server list -->
		<value key="servers">172.29.128.194:11211</value>
		<!-- weight list -->
		<value key="weights">1</value>
		<!-- 同期间隔（分钟） -->
		<value key="updateTime">5</value>
		<!-- 对象超时时间（分钟），应该设置为HttpSession时间+同期间隔 -->
		<value key="timeout">65</value>
		<!-- 初始连接数 -->
		<value key="initConn">5</value>
		<!-- 最小连接数 -->
		<value key="minConn">5</value>
		<!-- 最大连接数 -->
		<value key="maxConn">1024</value>
		<!-- 连接最长空闲时间(分) -->
		<value key="maxIdle">360</value>
		<!-- 维护线程的轮询时间(秒) -->
		<value key="maintSleep">30</value>	
	</mapKey>

	<!-- WEB服务器的Domain -->
	<key name="web.server.domain">
		<value>.sipbus.com</value>
	</key>

	<!-- message是否显示messageID -->
	<key name="show.messageId">
		<value>false</value>
	</key>

</configs>